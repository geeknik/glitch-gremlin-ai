{
"compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
    "@glitch-gremlin/sdk": ["./sdk/src/index.ts"],
    "@glitch-gremlin/*": ["./*/src"]
    },
    "declaration": true,
    "sourceMap": true,
    "composite": true
},
"references": [
    { "path": "./sdk" },
    { "path": "./cli" }
],
"include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json",
    "src/**/__tests__/**/*.ts"
],
"exclude": [
    "node_modules",
    "dist"
]
}
