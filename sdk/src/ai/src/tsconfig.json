{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "../../",
        "outDir": "../../../dist",
        "module": "esnext",
        "target": "es2020",
        "lib": ["es2020", "dom"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "../../**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
} 