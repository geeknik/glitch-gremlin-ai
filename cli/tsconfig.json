{
"compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020", 
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@glitch-gremlin/sdk": ["../sdk/src"]
    },
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "preserveSymlinks": true
},
"include": ["src/**/*.ts"],
"exclude": ["node_modules", "dist"],
"references": [
    { "path": "../sdk" }
]
}
