{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@glitch-gremlin/sdk": ["./sdk/src/index.ts"]
    },
    "declaration": true,
    "sourceMap": true
  },
  "references": [
    { "path": "./sdk" },
    { "path": "./cli" }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
