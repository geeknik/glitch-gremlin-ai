{
"extends": "./tsconfig.json",
"compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
        "@/*": ["./src/*"],
        "@glitch-gremlin/sdk": ["../sdk/src"],
        "@glitch-gremlin/sdk/*": ["../sdk/src/*"]
    }
},
"include": [
    "src/**/*",
    "__tests__/**/*",
    "jest.setup.js"
]
}
