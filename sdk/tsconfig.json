{
"compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["jest", "node"],
    "paths": {
    "@/*": ["./src/*"],
    "@solana/*": ["./node_modules/@solana/*"]
    }
},
"include": ["src/**/*", "src/__tests__/**/*"],
"exclude": ["node_modules", "dist"]
}
