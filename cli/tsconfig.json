{
  "extends": "../tsconfig.json", 
  "compilerOptions": {
      "composite": true,
      "declaration": true,
    "target": "ES2020",
    "module": "ES2022",
    "rootDir": "../../",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "paths": {
      "@glitch-gremlin/sdk": ["../../sdk/src/index.ts"],
      "@glitch-gremlin/sdk/*": ["../../sdk/src/*"],
      "#cli/*": ["./*"]
    }
  },
  "include": ["src/**/*", "../sdk/src/**/*.ts", "../sdk/src/**/*.d.ts", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
