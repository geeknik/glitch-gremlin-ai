{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDirs": ["."],
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": false,
        "sourceMap": true,
        "types": ["jest", "node"],
        "paths": {
            "@glitch-gremlin/sdk": ["./sdk/src/index.ts"],
            "#cli/*": ["./cli/src/*"],
            "@glitch-gremlin/sdk/*": ["./sdk/src/*"]
        },
        "baseUrl": ".",
        "resolveJsonModule": true,
        "lib": ["es2020"]
    },
    "include": ["sdk/src/**/*", "cli/src/**/*", "__tests__/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
        { "path": "./sdk/tsconfig.json" },
        { "path": "./cli/tsconfig.json" }
    ]
}
