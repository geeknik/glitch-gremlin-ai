{
"$schema": "https://turbo.build/schema.json",
"globalDependencies": ["**/.env.*local"],
"tasks": {
    "build": {
    "dependsOn": ["^build"],
    "outputs": ["dist/**", ".next/**", "build/**"],
    "cache": true
    },
    "test": {
    "dependsOn": ["build"],
    "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
    "cache": true
    },
    "lint": {
    "outputs": []
    },
    "dev": {
    "cache": false,
    "persistent": true
    },
    "clean": {
    "cache": false
    }
}
}

