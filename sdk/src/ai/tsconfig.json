{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/ai",
    "rootDir": "../../src",
    "composite": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "../../src/types.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/__tests__/**",
    "jest.setup.ts"
  ],
  "references": [
    { "path": "../.." }
  ]
}
